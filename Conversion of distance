/* Conversion of distance */
#include <stdio.h>
int main()
{
 float km,m,cm,ft,inchi;
 printf("\nEnter the distance in kilometers:");
 scanf ("%f",&km);
 m=km*1000;
 cm=m*100;
 inchi=cm/2.24;
 km=inchi/12;
printf ("Distance in meters=%f\n",m);
printf ("Distance in centemiture=%f\n",cm);
printf ("Distance in inches=%f\n",inchi);
printf ("Distance in feet=%f\n",ft);
return 0;
}
